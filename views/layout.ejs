<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %> · Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter+Tight:wght@300..800&display=swap" rel="stylesheet">
  <link href="<%= basePath %>/public/css/custom.css" rel="stylesheet">

  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.4/dist/chart.umd.min.js"></script>

  <script>
    window.BASE_PATH = "<%= basePath %>";
  </script>
</head>
<body>
<!-- navbar (reemplazá tu <nav> actual) -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mt-3 mx-3 rounded-4 pt-2 px-3 shadow-sm rounded-clip">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold d-flex align-items-center gap-2" href="/">
      <i class="bi bi-whatsapp"></i>
      Dashboard Whatsapp
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div id="navMain" class="collapse navbar-collapse">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <!-- <a class="nav-link <%= nav.general ? 'active' : '' %>" <%= nav.general ? 'aria-current="page"' : '' %> href="/">General</a> -->
           <a class="nav-link <%= nav.general ? 'active' : '' %>" href="<%= basePath %>/">General</a>
        </li>
        <li class="nav-item">
          <!-- <a class="nav-link <%= nav.detalle ? 'active' : '' %>" <%= nav.detalle ? 'aria-current="page"' : '' %> href="/metricas">Detalle</a> -->
           <a class="nav-link <%= nav.detalle ? 'active' : '' %>" href="<%= basePath %>/metricas">Detalle</a>
        </li>
        <li class="nav-item">
          <!-- <a class="nav-link <%= nav.cierres ? 'active' : '' %>" <%= nav.cierres ? 'aria-current="page"' : '' %> href="/cierres">Cierres</a> -->           
          <a class="nav-link <%= nav.cierres ? 'active' : '' %>" href="<%= basePath %>/cierres">Cierres</a>
        </li>
        <li class="nav-item">
          <!-- <a class="nav-link <%= nav.busqueda ? 'active' : '' %>" <%= nav.busqueda ? 'aria-current="page"' : '' %> href="/busqueda">Búsqueda</a> -->
           <a class="nav-link <%= nav.busqueda ? 'active' : '' %>" href="<%= basePath %>/busqueda">Búsqueda</a>
        </li>
        <li class="nav-item ms-lg-3">
          <button
            id="svc-indicator"
            class="btn btn-success btn-sm rounded-pill px-3 py-1 text-white fw-semibold"
            type="button"
            disabled
            aria-live="polite"
            title="Estado del servicio de WhatsApp"
          >
            Servicio OK
          </button>
        </li>

      </ul>
    </div>
  </div>
</nav>



<main class="mx-3 py-4">
  <%- body %>
</main>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
